<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.hp.dc_project.phoneotp"
    android:background="@color/button_material_light">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@drawable/backgroundpic">
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="110dp"
        android:id="@+id/layout1">

        <EditText
            android:id="@+id/editPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:editable="false"
            android:hint="Enter number"
            android:inputType="phone"
            android:maxLength="10"
            android:padding="20dp"
            android:textColor="#000000"
            android:textColorHint="#000000" />

        <Button
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:text="Send SMS"
            android:id="@+id/btnCont"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:textSize="20sp"
            android:layout_below="@id/editPhone"
            android:onClick="send_sms"
            android:textColor="@color/cardview_dark_background"
            android:background="@drawable/backgrounduser"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layout2"
        android:layout_below="@+id/layout1"
        android:orientation="vertical"
        android:layout_margin="@dimen/activity_horizontal_margin">
        <ProgressBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/progressbar" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/layout2"
        android:id="@+id/linearLayout">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter code"
            android:inputType="phone"
            android:maxLength="10"
            android:layout_margin="20dp"
            android:padding="20dp"
            android:layout_below="@+id/btnCont"
            android:textColor="#000000"
            android:id="@+id/validatePhone"
            android:textColorHint="#000"
            />
        <Button
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:id="@+id/signin"
            android:textAllCaps="true"
            android:layout_below="@+id/validatePhone"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:textSize="20sp"
            android:textColor="@color/cardview_dark_background"
            android:background="@drawable/backgrounduser"
            android:text="sign in"
            android:onClick="verify"/>

    </LinearLayout>

</RelativeLayout>
