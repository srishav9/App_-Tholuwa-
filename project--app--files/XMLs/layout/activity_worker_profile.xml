                        android:layout_height="match_parent"
                        android:layout_margin="10dp"
                        android:layout_marginTop="20dp"
                        android:gravity="left"
                        android:hint="Phone "
                        android:textSize="16dp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
