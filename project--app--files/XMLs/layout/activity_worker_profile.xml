            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:elevation="2dp"
                android:orientation="horizontal"
                android:weightSum="3">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
