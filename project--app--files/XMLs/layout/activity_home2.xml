<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="10dp"
    android:paddingRight="10dp"
    android:paddingLeft="10dp"
    android:background="#5998da"
    tools:context="com.example.hp.dc_project.home2"
    >
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/first">
        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:id="@+id/btn_elec"
            android:clickable="true"
            android:src="@drawable/electrician_round"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:id="@+id/btn_plumber"
            android:clickable="true"
            android:layout_gravity="right"
            android:src="@drawable/plumber_round"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:id="@+id/btn_driver"
            android:clickable="true"
            android:layout_marginTop="230dp"
            android:src="@drawable/driver_round"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:id="@+id/btn_painter"
            android:clickable="true"
            android:layout_marginTop="230dp"
            android:layout_gravity="right"
            android:src="@drawable/painter_round"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:id="@+id/btn_welder"
            android:clickable="true"
            android:layout_marginTop="450dp"
            android:layout_gravity="right"
            android:src="@drawable/welder_round"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"/>
    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/btn_mechnist"
        android:clickable="true"
        android:layout_marginTop="450dp"
        android:layout_gravity="right"
        android:src="@drawable/mechanic_round"/>

</RelativeLayout>
</ScrollView>
